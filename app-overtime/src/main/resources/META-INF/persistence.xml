<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="tuappPU" transaction-type="JTA">
        <jta-data-source>jdbc/tuappDS</jta-data-source>
        <properties>

            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://overtime-mysql-container:3306/overtime?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="overtimeuser"/>
            <property name="jakarta.persistence.jdbc.password" value="overtimeUser2525"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- log para depuraciÃ³n -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

        </properties>
    </persistence-unit>

</persistence>
